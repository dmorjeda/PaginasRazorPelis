@page "{id:int?}"
@model PaginasRazorPelis.Pages.Pelis.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pelicula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pelicula.ID" />
            <div class="form-group">
                <label asp-for="Pelicula.Titulo" class="control-label"></label>
                <input asp-for="Pelicula.Titulo" class="form-control" />
                <span asp-validation-for="Pelicula.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pelicula.FechaEstreno" class="control-label"></label>
                <input asp-for="Pelicula.FechaEstreno" class="form-control" />
                <span asp-validation-for="Pelicula.FechaEstreno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pelicula.Genero" class="control-label"></label>
                <input asp-for="Pelicula.Genero" class="form-control" />
                <span asp-validation-for="Pelicula.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pelicula.Precio" class="control-label"></label>
                <input asp-for="Pelicula.Precio" class="form-control" />
                <span asp-validation-for="Pelicula.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pelicula.Rating" class="control-label"></label>
                <input asp-for="Pelicula.Rating" class="form-control" />
                <span asp-validation-for="Pelicula.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
